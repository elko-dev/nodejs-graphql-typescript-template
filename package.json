{
  "name": "myapp",
  "config": {
    "projectName": "myapp",
    "webAppName": "1:981607418561:web:62fd69e51d116dda45e240"
  },
  "scripts": {
    "start": "npm i && npm run build && npm run watch",
    "start-local": "rm -rf dist && npm run build && npm run watch",
    "build": "rimraf dist && npm run generate-gql-types && npm run decode-firebase-config && npm run build-ts && npm run tslint",
    "build-production": "npm run build-ts",
    "build-run": "npm run build-ts && node dist/server.js",
    "clean": "rimraf node_modules dist .scannerwork",
    "serve": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json --fix",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "test": "jest",
    "deploy": "./scripts/deploy.sh $npm_package_config_projectName",
    "quality:scan": "node sonar-scan.js",
    "generate": "npm run generate-gql-types",
    "generate-gql-types": "DEBUG=1 graphql-codegen --config graphql-codegen.yml",
    "decode-firebase-config": "./scripts/secret_decode.sh && npm run fetch-firebase-web-config",
    "fetch-firebase-web-config": "node create.config.files.js $npm_package_config_projectName $npm_package_config_webAppName"
  },
  "dependencies": {
    "@graphql-codegen/cli": "^1.17.8",
    "@graphql-codegen/introspection": "^1.17.8",
    "@graphql-codegen/typescript": "^1.17.9",
    "@graphql-codegen/typescript-resolvers": "^1.17.9",
    "@types/bcryptjs": "2.4.2",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^24.9.0",
    "@types/node": "^10.17.13",
    "bcryptjs": "2.4.3",
    "class-validator": "^0.11.0",
    "concurrently": "^5.1.0",
    "cors": "^2.8.5",
    "firebase": "^7.19.0",
    "googleapis": "^48.0.0",
    "graphql": "^14.5.4",
    "graphql-yoga": "^1.18.3",
    "jsonwebtoken": "8.5.1",
    "nodemon": "1.19.4",
    "pg": "^7.18.2",
    "prisma-client-lib": "^1.34.10",
    "request-promise": "^4.2.5",
    "ts-node": "7.0.1",
    "tslint": "^5.20.1",
    "typeorm": "^0.2.24",
    "typescript": "^3.2.2",
    "@google-cloud/storage": "latest",
    "node-pushnotifications": "latest"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.8.3",
    "dotenv-cli": "1.4.0",
    "jest": "^24.9.0",
    "rimraf": "^2.7.1",
    "sonarqube-scanner": "^2.7.0",
    "ts-jest": "^24.3.0"
  }
}
